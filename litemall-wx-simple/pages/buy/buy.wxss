.container {
  justify-content: center;
}
.search-bar {
  width: 70%;
  height:7%;
  background-color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 25px;
  box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.2);
}

.search-input {
  display: flex;
  align-items: center;
  padding: 0 10px;
}

.search-input image {
  width: 20px;
  height: 20px;
  margin-right: 5px;
}

.search-input input {
  flex: 1;
  height: 100%;
  border: none;
  outline: none;
  font-size: 14px;
}
