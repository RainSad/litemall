.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  color: #000;
  padding: 10px 20px;
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.2);
}

.nav-bar__left {
  font-size: 16px;
}

.nav-bar__right {
  display: flex;
  align-items: center;
  font-size: 14px;
}

.nav-bar__icon {
  width: 20px;
  height: 20px;
  margin-right: 5px;
}
